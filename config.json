{
    // ------------------------------------------------------------------
    // 以下是直播录制配置
    // ------------------------------------------------------------------

    // 录制链接
    // 设置为空则选择在录制开始时指定，暂时只支持B站，虎牙链接
    "url":"",

    // 视频分块长度
    // 单位：秒，默认：3600（一个小时）,设置为0则不分块
    "split":3600,

    // 录制文件路径
    // 默认为此文件夹下的save目录
    "output":"./save",

    // FFmpeg可执行文件位置
    // 默认为./tools/ffmpeg.exe，如果已经安装可以直接填ffmpeg
    "ffmpeg":"./tools/ffmpeg.exe",

    // 录制任务名称
    // 可以随便写
    "taskname":"replay",

    // 录制类型
    // 可以是danmu（只录制弹幕）,video（只录制视频）,all（都录制）,默认为all
    "recordtype":"all",

    // 弹幕保存文件类型
    // 可以是json, csv, excel（使用csv+ansi编码），默认json
    "dmFileType":"json",

    // 录制重连延时（秒）
    "replay_timeout":10,

    // ------------------------------------------------------------------
    // 以下是弹幕渲染配置
    // ------------------------------------------------------------------

    // 弹幕文件路径，设置为空则在渲染时指定
    "dmfile":"",

    // 脚本文件保存位置，为空表示直接运行脚本文件
    "scriptout":"",

    // AE路径，设置为auto则由程序在开始菜单中查找
    "aepath":"auto",

    // 创建的合成名称
    "videoname":"DanmakuLayer",

    // 合成的宽度/高度
    "width" : 1920,
    "height" : 1080,

    // 像素大小
    "pixelaspect" : 1.00,

    // 合成长度（秒）, 设置为auto则设定为最后一条弹幕结束的时间
    "videoDuration" : "auto",

    // 合成帧率
    "framerate" : 60,

    // 弹幕占比（占整个屏幕高度比例）
    "danmurate" : 0.33,

    // 弹幕行距
    "margin" : 6,

    // 过量弹幕处理（override 强行覆盖, ignore 自动忽略过量弹幕）
    "overflow_operate" : "ignore",

    // 弹幕不透明度
    "opacity" : 75,

    // 弹幕字体
    "font" : "MicrosoftYaHei-Bold",

    // 弹幕字体大小
    "fontsize" : 30,

    // 单条弹幕持续时间（秒）
    "dmDuration" : 10,

    // 弹幕之间的最大横向距离（占屏幕宽度的比例）
    "dmDistance" : 0.5
}